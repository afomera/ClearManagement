<%= simple_form_for(@service_request) do |f| %>
<div class="col-md-10">
  <div class="row">
    <div class="col-md-4">
      <%= f.input :customer_name %>
      <%= f.input :customer_phone %>
      <%= f.input :customer_email %>
    </div>
    <div class="col-md-4">
      <%= f.input :address %>
      <%= f.input :apartment %>
      <%= f.input :city %>
      <%= f.input :zipcode %>
    </div>
  </div>
<div class="row">
</div>
<div class="row">
  <div class="col-md-8">
    <%= f.input :description, as: :text, placeholder: "Please enter customer problems here", :input_html => { :rows => 7 } %>
  </div>
</div>

  <%= f.button :submit, class: "btn btn-primary" %>
</div>
<% end %>
